.container {
    background-color: #f8f8f8;
    min-height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.groups-list-image {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 320rpx;
    width: 100%;
}

.groups-list-image image {
    width: 100%;
    height: 100%;
}

.groups {
    width: 750rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding-top: 30rpx;
}

.groups-goods {
    display: flex;
    margin: 0 20rpx;
    padding: 10rpx 0;
    border-bottom: 1px solid #e4e4e4;
}

.groups-goods-cover {
    position: relative;
}

.groups-goods-cover image {
    width: 200rpx;
    height: 200rpx;
}

.groups-goods-content {
    width: 500rpx;
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.groups-goods-title {
    font-size: 28rpx;
    color: #575757;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.groups-goods-stores-container text {
    color: #e52c13;
}

.groups-goods-price-container,.groups-goods-price,.groups-goods-price-bottom {
    display: flex;
    font-size: 28rpx;
    align-items: flex-end;
    color: #e52c13;
}

.groups-goods-price-container {
    flex-direction: column;
}

.groups-goods-price,.groups-goods-price-bottom {
    width: 100%;
    color: #898989;
    justify-content: space-between;
    align-items: center;
}

.groups-goods-price {
    justify-content: flex-start;
}

.groups-goods-price text {
    color: #e52c13;
}

.groups-goods-price-bottom {
    margin-top: 20rpx;
}

.groups-person-number {
    color: #fff;
    background: #f44;
    font-size: 26rpx;
    padding: 5rpx 10rpx 5rpx 20rpx;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
    float: left;
    margin-right: 10rpx;
}

.groups-goods-price-left {
    color: #f44;
    font-size: 26rpx;
    flex: 1;
}

.groups-ladder {
    width: 30rpx;
    height: 10rpx;
}

.button {
    color: #fff;
    padding: 9rpx 16rpx;
    border-radius: 50rpx;
    font-size: 22rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    line-height: normal;
}

.begin-style {
    background-color: #f44;
}

.no-more-goods {
    text-align: center;
    font-size: 24rpx;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    color: #999;
}