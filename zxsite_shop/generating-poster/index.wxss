page {
    background-color: #ffffff;
}

.container {
    box-shadow: 1px 2px 5px #cccccc;
    width: 672rpx;
    margin: 10rpx 40rpx;
    font-size: 28rpx;
    position: relative;
    border-radius: 10rpx;
    padding: 0rpx 20rpx 0rpx;
}

.wenxin {
    margin-top: 10rpx;
}

.userinfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 10rpx;
}

.cover {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 632rpx;
    height: 632rpx;
    text-align: center;
}

.goods-info {
    justify-content: flex-start;
    width: 100%;
    position: relative;
}

.title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 30rpx;
}

.price {
    margin-top: 10rpx;
}

.price text {
    font-size: 46rpx;
}

.save-pic {
    position: absolute;
    bottom: -40rpx;
    border-radius: 60rpx;
    overflow: hidden;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: -150rpx;
    left: 50%;
    text-align: center;
    color: #fff;
}

.tip {
    color: #cccccc;
    margin-top: 70rpx;
    font-size: 28rpx;
    text-align: center;
}

.code {
    position: absolute;
    right: 0;
    bottom: 0rpx;
    width: 160rpx;
    height: 160rpx;
}

.tag {
    padding: 6rpx;
    background: #f00;
    color: #fff;
    margin-top: 50rpx;
}