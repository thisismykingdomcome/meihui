<view class="container">
    <view class="coupons-list">
        <form bindsubmit="fecthCoupon" data-id="{{item.id}}" data-listIndex="{{idx}}" reportSubmit="true" wx:for="{{couponList}}" wx:for-index="idx">
            <view class="coupons-item {{item.fecth_status}}">
                <view class="coupon-title">
                    <view wx:if="{{item.back_type==1}}">满减券</view>
                    <view wx:if="{{item.back_type==2}}">折扣券</view>
                </view>
                <view class="coupon-info">
                    <view style="display:flex;align-items:flex-end;" wx:if="{{item.back_type==1}}">￥<text class="coupon-price">{{item.deduct}}</text>
                    </view>
                    <view style="display:flex;align-items:flex-end;" wx:if="{{item.back_type==2}}">折<text class="coupon-discount">{{item.discount}}</text>
                    </view>
                    <view class="coupon-currency">
                        <view class="general-info">满{{item.enough}}元使用</view>
                    </view>
                    <view class="coupon-temp">
                        <view class="coupon-button {{item.fecth_status}}" wx:if="{{item.disabled}}">
                            <text style="width:100%;display:flex;justify-content:center;height:61rpx;line-height:61rpx;">已领取</text>
                        </view>
                        <view class="coupon-button {{item.fecth_status}}" wx:else>
                            <text style="width:100%;display:flex;justify-content:center;height:61rpx;line-height:61rpx;">立即领取</text>
                        </view>
                    </view>
                </view>
                <view class="coupon-term" wx:if="{{item.date_limit==1}}">
            领取后{{item.days}}天内有效
          </view>
                <view class="coupon-term" wx:else>
            有效期：{{item.start_date}}至{{item.end_date}}
          </view>
                <view style="display: flex;position:absolute;width:100%;height:100%;top:1px;left:1px;">
                    <button disabled="true" size="mini" style="width:100%;height:100%;" wx:if="{{item.disabled}}">领取</button>
                    <button formType="submit" size="mini" style="width:100%;height:100%;" wx:else>领取</button>
                </view>
            </view>
        </form>
    </view>
    <view class="no-more-goods">没有更多啦</view>
</view>
<import src="../../zxsite/pages/templates/footer.wxml"></import>
<template is="footerWx" data="{{...tabBar}}"></template>
