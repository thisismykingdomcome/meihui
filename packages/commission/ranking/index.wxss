page {
    background-color: #f44;
}

.top-wrapper {
    display: flex;
    align-items: flex-end;
}

.top {
    width: 33.33333%;
    text-align: center;
    position: relative;
    background-color: #fff;
}
.idnum{
  width: 15%;
display: flex;
justify-content: space-around;
align-items: center;

}
.top .ranking {
    color: #fff;
    background-color: #f44;
    border-radius: 50%;
    font-size: 14px;
    width: 20px;
    height: 20px;
    margin: 15px auto;
}

.top image {
    border-radius: 50%;
}

.top .nickname {
    width: 100%;
    font-size: 16px;
    position: absolute;
    bottom: 30px;
}
.ranking .nickname{
  width:60%;
 overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.ranking .money{
  width:25%;
     display: flex;
    justify-content: space-around;
    align-items: center;
}
.top .money {
    width: 100%;
    font-size: 14px;
    color: #f44;
    position: absolute;
    bottom: 10px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.top-1 {
    height: 200px;
    background: rgb(230,162,3);
    background: -webkit-linear-gradient(60deg,rgba(255,254,189,1) 25%,rgba(230,162,3,1));
}

.top-1 image {
    width: 180rpx;
    height: 180rpx;
}

.top-2 {
    height: 180px;
    background: rgb(210,210,210);
    background: -webkit-linear-gradient(60deg,rgba(250,250,250,1) 25%,rgba(210,210,210,1));
}

.top-2 image {
    width: 160rpx;
    height: 160rpx;
}

.top-3 {
    height: 160px;
    background: rgb(138,67,21);
    background: -webkit-linear-gradient(60deg,rgba(253,222,165,1) 25%,rgba(138,67,21,1));
}

.top-3 image {
    width: 120rpx;
    height: 120rpx;
}

.ranking-wrapper {
    margin-top: 10px;
    background-color: #fff;
}

.ranking-wrapper .ranking {
    padding: 5px 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 14px;
    border-bottom: 1px solid rgba(210,210,210,.3);
}

.ranking-wrapper .ranking .number {
    border-radius: 50%;
    background-color: #ccc;
    width: 20px;
    height: 20px;
    text-align: center;
}
.avatar{
  width: 20%;
display: flex;
justify-content: space-around;
align-items: center;
}
.ranking-wrapper .ranking .avatar image {
    margin-top: 2px;
    border-radius: 50%;
    width: 30px;
    height: 30px;
}

.ranking-wrapper .ranking .money {
    color: #f44;
}

.remark {
    font-size: 14px;
    color: #fff;
    text-align: center;
}