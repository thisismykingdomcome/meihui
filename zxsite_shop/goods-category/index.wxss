page {
    background-color: #fff;
    height: 100%;
    overflow: hidden
}

text{
  word-break: keep-all;
  word-wrap: break-word;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.container {
    min-height: 100%;
    height: 100%;
}

.leftNav{
  height:100%;
  width:200rpx;
  overflow-y: scroll;
  float:left;
  border-right:1px solid #ccc
}
.leftNavText{
  font-size:16px;
  line-height: 60rpx;
  text-align:center;
  display: inline-block;
  width:100%;
  margin-bottom: 30rpx
}
.rightBigBox{
  height:100%;
  width:550rpx;
  float:right;
}

.rightSub{
  
  padding:0 16rpx;
  
}
.rightSub:last-of-type{
  min-height: 100%;
  margin-bottom:10rpx
}
.subHeadline{
  color:orange;
  
  font-size:20px;
  text-align:center;
  margin-bottom:48rpx
}

.subContent{
  width:100%;

}

.subConItem{
  width:30%;
  height:200rpx;
  
  margin-bottom: 20rpx;
  float:left;
  margin-right:5%;
}
.subConItem:nth-of-type(3n){
  margin-right:0
}
.img{
  width:100%;
  height:155rpx
}
.imgText{
  width:100%;
  text-align: center;
  font-size:14px;
  line-height: 40rpx;
  display: inline-block
}
.categoryActive{
  color:white;
  background-color:orange;
  border-radius: 48rpx
}
.clear{
  clear: both
}