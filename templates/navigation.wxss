.navigation {
    width: 750rpx;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    box-sizing: border-box;
}

.navigation-box {
    overflow: hidden;
    margin: 12rpx 0;
}

.navigation-box.list-style-3 {
    width: 250rpx;
}

.navigation-box.list-style-3 image {
    width: 200rpx;
    height: 200rpx;
}

.navigation-box.list-style-4 {
    width: 187.5rpx;
}

.navigation-box.list-style-4 image {
    width: 105rpx;
    height: 105rpx;
}

.navigation-box.list-style-5 {
    width: 150rpx;
}

.navigation-box.list-style-5 image {
    width: 100rpx;
    height: 100rpx;
}

.navigation-box.list-style-6 {
    width: 125rpx;
}

.navigation-box.list-style-6 image {
    width: 75rpx;
    height: 75rpx;
}

.navigation-title {
    overflow: hidden;
    color: #575757;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    line-height: 2;
}