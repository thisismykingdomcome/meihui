<import src="./../../../wxParse/wxParse.wxml"></import>
<image class="banner" mode="scaleToFill" src="{{settings.commission_apply_banner}}" wx:if="{{settings.commission_apply_banner}}"></image>
<container-block>
    <van-cell-group>
        <van-field error readonly border="true" label="欢迎加入" titleWidth="100px" value="{{settings.shop_name}}"></van-field>
        <van-field error readonly border="true" label="邀请人" titleWidth="100px" value="{{memberAgent?memberAgent.nickname:'无'}}"></van-field>
    </van-cell-group>
    <van-cell-group wx:if="{{settings.commission_apply_full_info==1}}">
        <van-cell title="请完善申请信息"></van-cell>
        <van-field required bind:change="onFieldChange" border="true" id="real_name" label="真实姓名" placeholder="请输入真实姓名" titleWidth="100px"></van-field>
        <van-field required bind:change="onFieldChange" border="true" id="telephone" label="手机号码" placeholder="请输入手机号码" titleWidth="100px"></van-field>
    </van-cell-group>
    <button bindtap="onApply" class="weui-btn" style="background-color: {{themeColor}}" type="primary">立刻申请</button>
</container-block>
<view class="content">
    <template is="wxParse" data="{{wxParseData:article.nodes}}"></template>
</view>
<import src="./../../../zxsite/pages/templates/footer.wxml"></import>
<template is="footerWx" data="{{...tabBar}}"></template>
