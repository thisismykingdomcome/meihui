@import "../../../wxParse/wxParse.wxss";

.container {
    background-color: #f8f8f8;
    min-height: 100%;
    padding-bottom: 100rpx;
}

.swiper-container {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    background-color: #fff;
    position: relative;
}

.swiper_box {
    width: 100%;
    height: 750rpx;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 750rpx;
}

.card-item {
    width: 750rpx;
    height: 750rpx;
    display: inline-block;
    overflow: hidden;
}

.goods-info {
    background-color: #fff;
    padding: 35rpx 0;
    margin-bottom: 20rpx;
    width: 100%;
    position: relative;
}

.share {
    position: absolute;
    right: 35rpx;
    top: 40rpx;
    width: 40rpx;
    height: 40rpx;
}

.goods-info-fx {
    position: absolute;
    width: 50px;
    height: 60px;
    right: 0;
    top: 0;
}

.goods-info-fx button {
    position: absolute;
    width: 50px;
    height: 60px;
    top: 0;
    left: 0;
    z-index: 2;
    opacity: 0;
}

.goods-info-fx image {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    margin: 10px 10px 0 5px;
}

.goods-info-fx text {
    position: absolute;
    bottom: 3px;
    left: 0;
    z-index: 1;
    font-size: 10px;
    text-align: center;
}

.goods-info .goods-title {
    box-sizing: border-box;
    padding: 0 35rpx;
    font-size: 32rpx;
    line-height: 1.4;
    color: #000;
    margin-bottom: 15rpx;
    padding-right: 100rpx;
    font-weight: bold;
}

.goods-info .goods-sub-title {
    padding: 0 35rpx;
    font-size: 25rpx;
    color: #797979;
    margin-bottom: 15rpx;
    padding-right: 100rpx;
}

.goods-info .goods-share {
    box-sizing: border-box;
    font-size: 25rpx;
    line-height: 1.4;
    color: #CC0000;
    margin-bottom: 28rpx;
}

.goods-info .goods-price {
    box-sizing: border-box;
    padding: 0 35rpx;
    color: #f44;
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
    display: flex;
    justify-content: space-between;
}

.goods-info .goods-market-price {
    padding: 0 35rpx;
    font-size: 25rpx;
    color: #797979;
    text-decoration: line-through;
}

.goods-info .goods-desc {
    margin: 15rpx 35rpx 0;
    padding-top: 15rpx;
    border-top: 1px #e5e5e5 solid;
    display: flex;
    justify-content: space-between;
    font-size: 25rpx;
    color: #797979;
}

.row-arrow {
    width: 100%;
    box-sizing: border-box;
    padding: 0 120rpx 0 35rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    height: 102rpx;
    font-size: 28rpx;
    line-height: 102rpx;
    margin-bottom: 20rpx;
    background: #fff url(http://qn.zxsite.cn/zxsite_shop/arrow-right.png) no-repeat 697rpx center;
    background-size: 18rpx auto;
}

.label-arrow {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 35rpx;
    font-size: 26rpx;
    line-height: 52rpx;
    margin-bottom: 20rpx;
    background: #fff;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.label-item {
    padding-right: 30rpx;
    align-items: center;
    display: flex;
}

icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 6rpx;
}

.goods-des-info {
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.label-title {
    font-size: 32rpx;
    color: #000000;
    padding: 30rpx 35rpx;
}

.goods-text {
    padding: 10rpx;
    font-size: 28rpx;
    color: #666666;
    line-height: 56rpx;
    margin-bottom: 30rpx;
}

.des-imgs {
    width: 100%;
}

.des-imgs image {
    width: 100%;
}

.footer-box {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
}

.footer-box .home {
    position: relative;
    width: 100rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    font-size: 20rpx;
    color: #acacb7;
    box-sizing: border-box;
    background: url("http://qn.zxsite.cn/zxsite_shop/home.png") no-repeat center 21rpx;
    background-size: 44rpx auto;
}

.footer-box .contact {
    position: relative;
    width: 100rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    font-size: 20rpx;
    color: #acacb7;
    box-sizing: border-box;
    background: url("http://qn.zxsite.cn/zxsite_shop/kefu.png") no-repeat center 21rpx;
    background-size: 44rpx auto;
}

.footer-box .contact button[open-type=contact] {
    width: 100%;
    height: 100%;
}

.footer-box .shop-cart-btn {
    position: relative;
    width: 110rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    font-size: 20rpx;
    color: #acacb7;
    box-sizing: border-box;
    background: url("http://qn.zxsite.cn/zxsite_shop/cart.png") no-repeat center 21rpx;
    background-size: 44rpx auto;
}

.footer-box .shop-cart-btn .shop-num {
    position: absolute;
    color: #f44;
    top: 10rpx;
    width: 100%;
    text-align: right;
    right: 5rpx;
}

.footer-box .join-shop-cart {
    text-align: center;
    width: 290rpx;
    height: 100%;
    line-height: 100rpx;
    background-color: #ff976a;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
}

.footer-box .now-buy {
    text-align: center;
    height: 100%;
    width: 289rpx;
    line-height: 100rpx;
    background-color: #f44;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
}

.show-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 5;
}

.popup-contents {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    z-index: 6;
}

.pop-goods-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 30rpx;
    padding: 30rpx 0;
    border-bottom: 1px solid #eee;
}

.pop-img-box {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 26rpx;
}

.pop-img-box .goods-thumbnail {
    width: 120rpx;
    height: 120rpx;
}

.pop-goods-title {
    width: 484rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 26rpx;
    color: #000000;
}

.pop-goods-price {
    font-size: 26rpx;
    color: #f44;
    margin-top: 20rpx;
}

.pop-goods-close {
    width: 36rpx;
    height: 36rpx;
    flex: 1;
    background: url("http://qn.zxsite.cn/zxsite_shop/popup-close.png") no-repeat center center;
    background-size: 36rpx auto;
    align-self: flex-start;
    margin-top: -10rpx;
}

.size-label-box .label {
    font-size: 26rpx;
    color: #000;
    padding-left: 30rpx;
    padding: 30rpx 0 20rpx 30rpx;
}

.size-label-box .label-item-box {
    display: flex;
    margin-left: 30rpx;
    flex-direction: row;
    flex-wrap: wrap;
}

.size-label-box .label-item {
    font-size: 26rpx;
    color: #000;
    padding: 14rpx 20rpx;
    border: 1px solid #ddd;
    border-radius: 6rpx;
    margin: 0 20rpx 20rpx 0;
}

.size-label-box .label-item.active {
    color: #f44;
    border: 1px solid #f44;
}

.buy-num-box {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 30rpx 48rpx 0;
    margin-left: 30rpx;
    border-top: 1px solid #eee;
    margin-top: 30rpx;
    align-items: center;
}

.num-label {
    font-size: 26rpx;
    color: #000000;
}

.buy-num-box .num-box {
    display: flex;
}

.buy-num-box .num-box .num-jian,.buy-num-box .num-box .num-input,.buy-num-box .num-box .num-jia {
    width: 80rpx;
    height: 64rpx;
    line-height: 62rpx;
    text-align: center;
    border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
    font-size: 28rpx;
}

.buy-num-box .num-box .num-input input {
    height: 100%;
}

.popup-join-btn {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #ffffff;
    background-color: #f44;
}

.buy-num-box .num-box .hui {
    background-color: #f5f5f9;
}

.goods-seckill {
    width: 100%;
    background: url(http://qn.zxsite.cn/zxsite_shop/seckill-goods-countdown-bg.png);
    background-size: 100%;
    display: flex;
    padding: 35rpx 0;
    line-height: 36rpx;
    justify-content: space-between;
    color: #fff;
    font-size: 26rpx;
}

.goods-seckill view {
    padding: 0 35rpx;
}

.seckill-count {
    color: #fff;
    background: #f44;
    font-size: 24rpx;
    padding: 8rpx 10rpx 8rpx 20rpx;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
    float: left;
    margin-right: 5rpx;
}

.status-box {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-bottom: 1px solid #D5D5D5;
}

.status-box .status-label {
    width: 50%;
    text-align: center;
    font-size: 32rpx;
    color: #353535;
    box-sizing: border-box;
    position: relative;
}

.status-box .status-label.active {
    color: #f44;
}

.status-box .status-text {
    display: block;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.status-box .status-label .red-dot {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    left: 116rpx;
    top: 23rpx;
    background-color: #f43530;
    border-radius: 50%;
}

.rep-container {
    padding: 24rpx;
    box-sizing: border-box;
}

.rep-item {
    display: inline-flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    box-sizing: border-box;
    border-bottom: 1px solid #EBEBEB;
    padding: 20rpx 24rpx 20rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
}

.rep-r {
    width: 532rpx;
    margin-left: 30rpx;
}

.rep-top {
    width: 100%;
    justify-content: space-start;
    box-sizing: border-box;
    display: inline-flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.nickname,.time {
    font-size: 28rpx;
    color: #ACACAC;
}

.nickname {
    width: 45%;
}

.time {
    text-align: right;
    width: 55%;
}

.rep-middle {
    font-size: 30rpx;
    color: #404040;
    margin: 15rpx 0;
}

.rep-bottom {
    font-size: 28rpx;
    color: #acacac;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9999;
    background-color: rgba(0,0,0,0.6);
}

.mask-info {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #f8f8f8;
}

button {
    border-bottom: 2rpx solid #f6f6f6;
    background: #ffffff;
    border-radius: 0;
    font-size: 30rpx;
    line-height: 100rpx;
}

button::after {
    border: none;
    border-radius: 0;
}

.cancel-btn {
    margin-top: 20rpx;
    border-bottom: 0;
}

.commission-charge {
    margin-left: 5rpx;
    color: #fff;
    background: #f44;
    font-size: 26rpx;
    border-radius: 50rpx;
    font-weight: normal;
    padding: 8rpx 20rpx;
}

.diy-form-wrapper {
    margin-top: 30rpx;
    margin-left: 30rpx;
}

.diy-form-item-wrapper {
    border-top: 1px solid #eee;
    padding: 30rpx 0;
    width: 720rpx;
    display: flex;
    font-size: 26rpx;
}

.diy-form-item-wrapper:last-child {
    padding-bottom: 0;
}

.diy-form-item-label {
    width: 180rpx;
    display: flex;
    align-items: center;
}

.diy-form-item-value {
    width: 510rpx;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.diy-form-item-value .checkbox-wrapper {
    display: flex;
    align-items: center;
    margin-right: 5px;
    height: 50rpx;
}

.diy-form-item-value icon {
    width: auto;
    height: auto;
    margin-right: 5px;
}

.diy-form-item-value picker input,.diy-form-item-value picker {
    width: 100%;
}