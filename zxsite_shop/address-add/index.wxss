page {
    height: 100%;
}

.container {
    background-color: #f5f5f9;
    justify-content: initial;
}

.form-box {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}

.row-wrap {
    width: 720rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}

.row-wrap .label {
    width: 160rpx;
    color: #000;
}

.row-wrap .label-right {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
}

.row-wrap .label-right input {
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;
}

.row-wrap .right-box {
    margin-right: 30rpx;
}

.arrow-right {
    width: 15rpx;
    height: 24rpx;
}

.save-btn,.cancel-btn {
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    border-radius: 6rpx;
    box-sizing: border-box;
}

.save-btn {
    background-color: #f44;
    color: #fff;
}

button[type="default"] {
    background-color: #ffffff;
    color: #000;
}

.addr-details,.uploader-wrap {
    height: auto;
    padding: 30rpx 0;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}

.addr-details .label {
    margin: auto 0 auto 0;
    width: 160rpx;
    color: #000;
}

.addr-details textarea {
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}

picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}

.hui {
    color: #777;
}

.uploader-wrap {
    display: block;
}

.uploader-file {
    margin-top: 9px;
    position: relative;
    width: 79px;
    height: 79px;
}

.uploader-img {
    display: block;
    width: 79px;
    height: 79px;
}

.uploader-file-cancel {
    position: absolute;
    bottom: 0;
    color: #fff;
    background-color: #F43530;
    text-align: center;
    width: 100%;
    opacity: 0.8;
}

.uploader-box {
    position: relative;
    margin-top: 9px;
    width: 77px;
    height: 77px;
    border: 1px solid #d9d9d9;
}

.uploader-box:after,.uploader-box:before {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #d9d9d9;
}

.uploader-box:before {
    width: 2px;
    height: 39.5px;
}

.uploader-box:after {
    width: 39.5px;
    height: 2px;
}

.uploader-box:active {
    border-color: #999;
}

.uploader-box:active:after,.uploader-box:active:before {
    background-color: #999;
}

.uploader-input {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}