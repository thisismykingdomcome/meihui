<view class="van-search custom-class {{showAction||useActionSlot?'van-search--show-action':''}}" style="background: {{background}}">
    <van-field clearable bind:blur="onBlur" bind:change="onChange" bind:confirm="onSearch" bind:focus="onFocus" border="{{false}}" class="van-search__field" confirmType="search" customStyle="padding: 3px 10px" disabled="{{disabled}}" error="{{error}}" focus="{{focus}}" inputAlign="{{inputAlign}}" leftIcon="search" maxlength="{{maxlength}}" placeholder="{{placeholder}}" placeholderStyle="{{placeholderStyle}}" readonly="{{readony}}" type="search" value="{{value}}"></van-field>
    <view class="van-search__action" wx:if="{{showAction||useActionSlot}}">
        <slot name="action" wx:if="{{useActionSlot}}"></slot>
        <view bind:tap="onCancel" class="cancel-class" wx:else>取消</view>
    </view>
</view>
