<view class="container" style="background-color: {{backgroundColor}}">
    <view class="auction-list-image">
        <image src="{{banner}}"></image>
    </view>
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{index==currentType?'active':''}}" data-index="{{index}}" style="border-bottom-color: {{index==currentType?themeColor:'#fff'}};color: {{index==currentType?themeColor:'#353535'}}" wx:for="{{statusType}}" wx:key="{{index}}">
            <text class="status-text" style="border-bottom: 5rpx solid {{themeColor}}" wx:if="{{index==currentType}}">{{item}}</text>
            <text class="status-text" wx:else>{{item}}</text>
        </view>
    </view>
    <block wx:if="{{currentType==0}}">
        <view class="auction" wx:if="{{auctionList}}">
            <view bindtap="toAuctionDetailsTap" class="auction-goods" data-id="{{item.id}}" wx:for="{{auctionList}}">
                <view class="auction-goods-cover">
                    <image lazyLoad="true" mode="aspectFill" src="{{item.cover}}"></image>
                </view>
                <view class="auction-goods-content">
                    <view class="auction-goods-title">{{item.goods_title}}</view>
                    <view class="auction-goods-price-container">
                        <view class="auction-goods-price-bottom">
                            <view>{{textCurrentPrice}}<text class="auction-goods-price-left">￥<text style="font-size:38rpx;">{{item.current_price}}</text>
                                </text>
                            </view>
                            <view class="button begin-style" data-id="{{item.id}}">立刻参与</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
    <block wx:elif="{{currentType==1}}">
        <view class="auction" wx:if="{{auctionList}}">
            <view class="auction-goods" wx:for="{{auctionList}}">
                <view bindtap="toAuctionDetailsTap" class="auction-goods-cover" data-id="{{item.id}}">
                    <image lazyLoad="true" mode="aspectFill" src="{{item.cover}}"></image>
                </view>
                <view class="auction-goods-content">
                    <view bindtap="toAuctionDetailsTap" class="auction-goods-title" data-id="{{item.id}}">{{item.goods_title}}</view>
                    <view class="auction-goods-price-container">
                        <view style="display:flex;">
                            <view bindtap="toAuctionDetailsTap" class="auction_begin_time" data-id="{{item.id}}">{{item.start_time_format}}</view>
                            <view></view>
                        </view>
                        <view class="auction-goods-price-bottom">
                            <view>{{textCurrentPrice}}<text class="auction-goods-price-left">￥<text style="font-size:38rpx;">{{item.current_price}}</text>
                                </text>
                            </view>
                            <form bindsubmit="setRemind" data-auction_id="{{item.id}}" data-index="{{index}}" reportSubmit="true" wx:if="{{item.remind!=1}}">
                                <button class="button remind-set" formType="submit">
                                    <view>设置提醒</view>
                                </button>
                            </form>
                            <form bindsubmit="cancleRemind" data-auction_remind_id="{{item.remind_id}}" data-index="{{index}}" reportSubmit="true" wx:else>
                                <button class="button remind-cancle" formType="submit">取消提醒</button>
                            </form>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
    <block wx:elif="{{currentType==2}}">
        <view class="auction" wx:if="{{auctionList}}">
            <view bindtap="toAuctionDetailsTap" class="auction-goods" data-id="{{item.id}}" wx:for="{{auctionList}}">
                <view class="auction-goods-cover">
                    <image lazyLoad="true" mode="aspectFill" src="{{item.cover}}"></image>
                </view>
                <view class="auction-goods-content">
                    <view class="auction-goods-title">{{item.goods_title}}</view>
                    <view class="auction-goods-price-container">
                        <view class="auction-goods-price-bottom">
                            <view>{{textCompletePrice}}<text class="auction-goods-price-left">￥<text style="font-size:38rpx;">{{item.current_price}}</text>
                                </text>
                            </view>
                            <view class="button end-style" data-id="{{item.id}}">下次再来</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
    <view class="no-more-goods" hidden="{{loadingMoreHidden?true:false}}">没有更多啦</view>
</view>
<import src="../../zxsite/pages/templates/footer.wxml"></import>
<template is="footerWx" data="{{...tabBar}}"></template>
