<container-block customClass="van-hairline--bottom">
    <view class="swiper-container">
        <swiper autoplay="true" class="swiper-box" duration="1000" indicatorActiveColor="#FFFFFF" indicatorColor="rgba(255, 255, 255, .3)" indicatorDots="true" interval="3000">
            <swiper-item wx:for="{{carouselList}}" wx:key="id">
                <navigator appId="{{item.appid}}" openType="navigate" path="{{item.link_url}}" target="miniProgram" wx:if="{{item.link_type==5}}">
                    <image binderror="loadImageError" class="slide-image" height="562.5rpx" src="{{item.picture}}" width="750rpx"></image>
                </navigator>
                <image binderror="loadImageError" bindtap="swiperTap" class="slide-image" data-appid="{{item.appid}}" data-id="{{item.businessId}}" data-link-type="{{item.link_type}}" data-link-url="{{item.link_url}}" height="562.5rpx" src="{{item.picture}}?time={{loadImageTime}}" width="750rpx" wx:else></image>
            </swiper-item>
        </swiper>
    </view>
    <van-tabs active="{{tabActive}}" bind:change="onTabChange" color="{{themeColor}}">
        <van-tab title="{{item.name}}" wx:for="{{categoryList}}" wx:key="key"></van-tab>
    </van-tabs>
    <view class="goods-container">
        <view bindtap="onGoodsDetailTap" class="goods-box list-style-2" data-id="{{item.id}}" wx:for="{{goodsList}}" wx:key="{{index}}">
            <view class="img-box">
                <image binderror="loadImageError" class="image" lazyLoad="true" mode="aspectFill" src="{{item.cover}}"></image>
            </view>
            <view class="goods-title">{{item.title}}</view>
            <view class="goods-bottom-wrapper">
                <view class="goods-price">
                    <text style="font-size:30rpx">{{item.credit}}</text>
                    <text style="color:#aaa;"> 积分</text>
                    <block wx:if="{{item.money>0}}">
                        <text style="color:#aaa;"> + </text>¥ <text style="font-size:30rpx">{{item.money}}</text>
                    </block>
                </view>
            </view>
        </view>
    </view>
</container-block>
<view class="no-more" hidden="{{loadingMoreHidden?true:false}}">没有更多啦</view>
<view bindtap="toOrder" class="order" style="background: url(data:image/png;base64,) {{themeColor}} no-repeat center; background-size: 60rpx;"></view>
<import src="./../../../zxsite/pages/templates/footer.wxml"></import>
<template is="footerWx" data="{{...tabBar}}"></template>
