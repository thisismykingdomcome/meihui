<template name="goods">
    <view class="goods-container" style="background-color: {{style.backgroundColor}}" wx:if="{{style.listStyle=='list-style-1'}}">
        <view bindtap="onGoodsDetailTap" class="goods-box {{style.listStyle}}" data-id="{{item.id}}" wx:for="{{data.list}}" wx:key="{{index}}">
            <view class="img-box">
                <image binderror="loadImageError" class="image" lazyLoad="true" mode="aspectFill" src="{{item.cover}}?time={{loadImageTime}}"></image>
                <view class="commission-charge" wx:if="{{agent&&item.commission_charge>0}}">{{textCharge}} {{item.commission_charge}}{{textUnion}}</view>
            </view>
            <view class="goods-title">{{item.title}}</view>
            <view class="goods-bottom-wrapper">
                <view class="goods-price-wrapper">
                    <view class="goods-price" style="padding-right:12rpx;" wx:if="{{style.price==1}}">¥ <text style="font-size:38rpx;">{{item.price}}</text>
                    </view>
                    <view class="goods-price" style="color:#aaa;" wx:if="{{style.sales==1}}">{{item.sales}}人已{{item.type==3?'预约':'购买'}}</view>
                </view>
                <view class="goods-buy-button">{{item.type==3?'预约':'购买'}}</view>
            </view>
        </view>
    </view>
    <view class="goods-container" style="background-color: {{style.backgroundColor}}" wx:elif="{{style.listStyle=='list-style-2'}}">
        <view bindtap="onGoodsDetailTap" class="goods-box {{style.listStyle}}" data-id="{{item.id}}" style="height: {{style.price==1||style.sales==1?504:470}}rpx;" wx:for="{{data.list}}" wx:key="{{index}}">
            <view class="img-box">
                <image binderror="loadImageError" class="image" lazyLoad="true" mode="aspectFill" src="{{item.cover}}?time={{loadImageTime}}"></image>
                <view class="commission-charge" wx:if="{{agent&&item.commission_charge>0}}">{{textCharge}} {{item.commission_charge}}{{textUnion}}</view>
            </view>
            <view class="goods-title">{{item.title}}</view>
            <view class="goods-bottom-wrapper">
                <view class="goods-price" wx:if="{{style.price==1}}">¥ <text style="font-size:30rpx;">{{item.price}}</text>
                </view>
                <view class="goods-price" style="color:#aaa;" wx:if="{{style.sales==1}}">{{item.sales}}人已{{item.type==3?'预约':'购买'}}</view>
            </view>
        </view>
    </view>
    <view class="goods-container" style="background-color: {{style.backgroundColor}}" wx:elif="{{style.listStyle=='list-style-3'}}">
        <view bindtap="onGoodsDetailTap" class="goods-box {{style.listStyle}}  van-hairline--bottom" data-id="{{item.id}}" wx:for="{{data.list}}" wx:key="{{index}}">
            <view class="goods-image-wrapper">
                <view class="img-box">
                    <image binderror="loadImageError" class="image" lazyLoad="true" mode="aspectFill" src="{{item.cover}}?time={{loadImageTime}}"></image>
                </view>
            </view>
            <view class="goods-content-wrapper">
                <view class="goods-title-wrapper">
                    <view class="goods-title">{{item.title}}</view>
                    <view class="goods-sales" wx:if="{{style.sales==1}}">{{item.sales}}人已{{item.type==3?'预约':'购买'}}</view>
                </view>
                <view class="goods-bottom-wrapper">
                    <view class="goods-price">
                        <block wx:if="{{style.price==1}}">¥ <text style="font-size:38rpx;">{{item.price}}</text>
                        </block>
                    </view>
                    <view class="goods-buy-button">{{item.type==3?'预约':'购买'}}</view>
                </view>
            </view>
        </view>
    </view>
</template>
