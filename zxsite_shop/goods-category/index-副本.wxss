page {
    background-color: #fff;
    height: 100%;
}

.container {
    min-height: 100%;
    height: 100%;
}

.has-child {
    display: flex;
    justify-content: flex-start;
    height: 100%;
}

.category-left {
    width: 170rpx;
    height: 100%;
    background-color: #f8f8f8;
}

.parent-item {
    width: 100%;
    line-height: 92rpx;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
    background-color: #f8f8f8;
}

.active-item {
    background-color: #fff;
}

.category-right {
    width: 570rpx;
    margin-left: 10rpx;
    background-color: #fff;
}

.category-container {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 10rpx;
}

.category-item {
    width: 181rpx;
    overflow: hidden;
    text-align: center;
    margin-bottom: 30rpx;
}

.image {
    width: 120rpx;
    height: 120rpx;
}

.name {
    font-size: 28rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
}

.goods-item {
    display: flex;
    margin: 0 20rpx;
    padding: 10rpx 0;
    border-bottom: 1px solid #e4e4e4;
}

.goods-item-cover {
    position: relative;
    width: 200rpx;
    height: 200rpx;
}

.goods-item-cover image {
    width: 200rpx;
    height: 200rpx;
}

.goods-item-content {
    width: 300rpx;
    padding-left: 20rpx;
    padding-bottom: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goods-item-title {
    font-size: 28rpx;
    color: #575757;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods-item-price {
    font-size: 28rpx;
    color: #e52c13;
}

.no-more-goods {
    text-align: center;
    font-size: 24rpx;
    padding-bottom: 48rpx;
    color: #999;
}