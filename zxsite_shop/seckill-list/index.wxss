.container {
    background-color: #f8f8f8;
    min-height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.seckill {
    width: 750rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding-top: 30rpx;
}

.seckill-title {
    width: 100%;
    background: url("http://qn.zxsite.cn/zxsite_shop/seckill-title-bg.png") no-repeat center;
    background-size: 100%;
    text-align: center;
    padding-top: 20rpx;
}

.seckill-sub-title {
    width: 100%;
    text-align: center;
    font-size: 26rpx;
    color: #c2c2c2;
    padding-bottom: 20rpx;
}

.seckill-goods {
    display: flex;
    margin: 0 20rpx;
    padding: 10rpx 0;
    border-bottom: 1px solid #e4e4e4;
}

.seckill-goods-cover {
    position: relative;
    width: 200rpx;
    height: 200rpx;
}

.seckill-goods-cover image {
    width: 200rpx;
    height: 200rpx;
}

.seckill-goods-countdown {
    position: absolute;
    bottom: 0;
    color: #fff;
    background: url(http://qn.zxsite.cn/zxsite_shop/seckill-goods-countdown-bg.png);
    background-size: 100%;
    text-align: center;
    font-size: 24rpx;
    width: 200rpx;
    height: 40rpx;
}

.seckill-goods-countdown view {
    background: url(http://qn.zxsite.cn/zxsite_shop/seckill-icon-clock.png) no-repeat 30rpx center;
    background-size: 25rpx;
    padding-left: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.seckill-goods-cover .icon {
    width: 25rpx;
    height: 25rpx;
    margin-top: 5rpx;
    margin-right: 10rpx;
}

.seckill-goods-content {
    width: 500rpx;
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.seckill-goods-title {
    font-size: 26rpx;
    color: #575757;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.seckill-goods-progress-container {
    background-color: #e7e7e7;
    border-radius: 50rpx;
    height: 15rpx;
}

.seckill-goods-progress {
    background: url(http://qn.zxsite.cn/zxsite_shop/seckill-progress-front.png);
    background-size: 100%;
    border-radius: 50rpx;
    height: 15rpx;
}

.seckill-goods-stores-container {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    color: #898989;
    margin-top: 10rpx;
}

.seckill-goods-stores-container text {
    color: #e52c13;
}

.seckill-goods-price-container {
    display: flex;
    flex-direction: column!important;
    font-size: 26rpx;
    align-items: flex-end;
    color: #e52c13;
}

.seckill-goods-price-container .goods-price {
    font-size: 24rpx;
    color: #898989;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.skill-bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    align-items: flex-end;
}

.seckill-goods-price-container .button {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    line-height: normal;
}

.begin-time {
    color: #898989;
    font-size: 22rpx;
    display: flex;
    align-items: flex-end;
}

.play-time {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.button {
    color: #fff;
    padding: 9rpx 16rpx;
    border-radius: 50rpx;
    font-size: 22rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    line-height: normal;
}

.remind-set {
    background-color: #2eb82e;
}

.remind-cancle {
    padding: 8rpx 15rpx;
    color: #2eb82e;
    border: 1px solid #2eb82e;
}

.begin-style {
    background-color: #f44;
}

.end-style {
    color: #bdbdbd;
    background-color: #f0f0f0;
}

.seckill-list-image {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 320rpx;
    width: 100%;
}

.seckill-list-image image {
    width: 100%;
    height: 100%;
}

.no-more-goods {
    text-align: center;
    font-size: 24rpx;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    color: #999;
}

.status-box {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-bottom: 5rpx solid #e4e4e4;
}

.status-box .status-label {
    width: 50%;
    height: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #353535;
    box-sizing: border-box;
    position: relative;
}

.status-box .status-label.active {
    color: #f44;
}

.status-box .status-text {
    display: block;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.status-box .status-label .red-dot {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    left: 116rpx;
    top: 23rpx;
    background-color: #f43530;
    border-radius: 50%;
}

.timePlay {
    border-radius: 8rpx;
    background-color: #e52c13;
    border: 1rpx solid #e52c13;
    color: #fff!important;
    text-decoration: none!important;
    padding: 2rpx 10rpx;
}

.begin-time-tommorow {
    color: #898989;
    font-size: 22rpx;
    margin-bottom: 10rpx;
    width: 100%;
}