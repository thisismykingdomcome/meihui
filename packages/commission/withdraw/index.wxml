<view class="container" style="background-color: {{backgroundColor}}">
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{index==currentType?'active':''}}" data-index="{{index}}" style="border-bottom-color: {{index==currentType?themeColor:'#fff'}};color: {{index==currentType?themeColor:'#353535'}}" wx:for="{{statusType}}" wx:key="{{index}}">
            {{item}}
            <view class="{{tabClass[index]}}"></view>
        </view>
    </view>
    <view class="no-order" hidden="{{withdrawList?true:false}}">
        <image class="no-order-img" src="http://qn.zxsite.cn/zxsite_shop/no-order.png"></image>
        <view class="text">暂无记录</view>
    </view>
    <view class="order-list" hidden="{{withdrawList?false:true}}">
        <view class="a-order" wx:for="{{withdrawList}}" wx:key="{{index}}">
            <view class="order-date">
                <view class="date-box">申请时间：{{item.apply_time}}</view>
                <view class="status red" wx:if="{{item.status==0}}">无效</view>
                <view class="status" wx:if="{{item.status==1}}">待审核</view>
                <view class="status" wx:if="{{item.status==2}}">待打款</view>
                <view class="status red" wx:if="{{item.status==5}}">已打款</view>
            </view>
            <view class="order-date">
                <view class="date-box">审核时间：{{item.check_time}}</view>
                <view>{{item.apply_money}}{{textUnion}}</view>
            </view>
            <view class="goods-info" wx:if="{{item.status==0&&item.content}}">
                <view class="goods-des">
                    <view>{{item.content}} </view>
                </view>
            </view>
            <view class="price-box">
                <view class="total-price">到账：{{item.account_money}}{{textUnion}}</view>
            </view>
        </view>
    </view>
</view>
<view class="no-more-goods" hidden="{{loadingMoreHidden?true:false}}">没有更多啦</view>
