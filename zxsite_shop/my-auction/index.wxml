<view class="container" style="background-color: {{backgroundColor}}">
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{index==currentType?'active':''}}" data-index="{{index}}" style="border-bottom-color: {{index==currentType?themeColor:'#fff'}};color: {{index==currentType?themeColor:'#353535'}}" wx:for="{{statusType}}" wx:key="{{index}}">
            {{item}}
            <view class="{{tabClass[index]}}"></view>
        </view>
    </view>
    <view class="no-order" hidden="{{orderList?true:false}}">
        <image class="no-order-img" src="http://qn.zxsite.cn/zxsite_shop/no-order.png"></image>
        <view class="text">暂无订单</view>
    </view>
    <view class="order-list" hidden="{{orderList?false:true}}">
        <view class="a-order" wx:for="{{orderList}}" wx:key="{{index}}">
            <view class="order-date">
                <view class="date-box">参与时间：{{item.create_time}}</view>
                <view class="status red" wx:if="{{item.status==0}}">已关闭</view>
                <view class="status" wx:if="{{item.status==1}}">待付款</view>
                <view class="status" wx:if="{{item.status==2}}">{{item.time_status==1?textProcess:'结算中'}}</view>
                <view class="status" wx:if="{{item.status==3}}">未拍中</view>
                <view class="status" wx:if="{{item.status==4}}">已拍中</view>
                <view class="status red" wx:if="{{item.status==5}}">已完成</view>
            </view>
            <view>
                <scroll-view class="goods-img-container" scrollX="true">
                    <view bindtap="gotoAuctionDetail" class="img-box" data-auction-id="{{item.auction_id}}">
                        <image class="goods-img" src="{{item.cover}}"></image>
                    </view>
                </scroll-view>
            </view>
            <view class="price-box">
                <view class="total-price">{{textDeposit}}：¥ {{item.amount}}</view>
                <view bindtap="toPayTap" class="btn topay-btn" data-id="{{item.id}}" wx:if="{{item.status==1&&item.end_time>currentTime}}">马上付款</view>
                <view bindtap="toPlaceOrderTap" class="btn topay-btn" data-auction-id="{{item.auction_id}}" data-id="{{item.id}}" hidden="{{item.status==4?false:true}}">马上下单</view>
            </view>
        </view>
    </view>
</view>
<import src="../../zxsite/pages/templates/footer.wxml"></import>
<template is="footerWx" data="{{...tabBar}}"></template>
