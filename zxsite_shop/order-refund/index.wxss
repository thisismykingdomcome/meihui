    background-size: 18rpx 26rpx;
    width: 20rpx;
    height: 24rpx;
    margin-top: 37rpx;
}

.all-hover {
    background: #fff;
}

.title {
    width: 690rpx;
    font-size: 30rpx;
    line-height: 50rpx;
}

.tip {
    font-size: 26rpx;
    line-height: 50rpx;
    color: gray;
}

.row-box {
    background: #fff;
    width: 750rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
    line-height: 100rpx;
}

.row-label {
    width: 170rpx;
    margin-left: 30rpx;
}

.money {
    color: #f00;
    width: 30rpx;
}

.right-text {
    width: 600rpx;
    text-align: left;
}

.row-box input {
    line-height: 100rpx;
    height: 100rpx;
}

.refund {
    color: #f00;
}

.goods-status {
    width: 480rpx;
    margin-right: 20rpx;
    text-align: right;
}

.photo {
    width: 750rpx;
}

.uploader-file {
    margin-top: 9px;
    position: relative;
    width: 79px;
    height: 79px;
}

.uploader-img {
    display: block;
    width: 79px;
    height: 79px;
}

.uploader-file-cancel {
    position: absolute;
    bottom: 0;
    color: #fff;
    background-color: #F43530;
    text-align: center;
    width: 158rpx;
    height: 50rpx;
    line-height: 50rpx;
    opacity: 0.8;
}

.uploader-box {
    position: relative;
    width: 158rpx;
    height: 158rpx;
    border: 1px solid #d9d9d9;
    margin-top: 20rpx;
}

.uploader-box:after,.uploader-box:before {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #d9d9d9;
}

.uploader-box:before {
    width: 2px;
    height: 39.5px;
}

.uploader-box:after {
    width: 39.5px;
    height: 2px;
}

.uploader-box:active {
    border-color: #999;
}

.uploader-box:active:after,.uploader-box:active:before {
    background-color: #999;
}

.uploader-input {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.photo-item {
    width: 158rpx;
    height: 158rpx;
    padding-left: 30rpx;
    position: relative;
}

.money-text {
    text-indent: 30rpx;
    background: none;
    height: 40rpx;
    line-height: 40rpx;
    color: gray;
    font-size: 26rpx;
}

.save-btn {
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    background: none;
}

.submit-btn {
    background: none;
}