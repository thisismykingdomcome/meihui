<view class="container" style="background-color: {{backgroundColor}}">
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{index==currentType?'active':''}}" data-index="{{index}}" style="border-bottom-color: {{index==currentType?themeColor:'#fff'}};color: {{index==currentType?themeColor:'#353535'}}" wx:for="{{statusType}}" wx:key="{{index}}">
            {{item}}
            <view class="{{tabClass[index]}}"></view>
        </view>
    </view>
    <view class="no-order" hidden="{{orderList?true:false}}">
        <image class="no-order-img" src="http://qn.zxsite.cn/zxsite_shop/no-order.png"></image>
        <view class="text">暂无{{textCommissionOrder}}</view>
    </view>
    <view class="order-list" hidden="{{orderList?false:true}}">
        <view class="a-order" wx:for="{{orderList}}" wx:key="{{index}}">
            <view class="order-date">
                <view class="date-box">订单编号：{{item.sn}}</view>
                <view class="status red" wx:if="{{item.order_status==0}}">已关闭</view>
                <view class="status" wx:if="{{item.order_status==1}}">待付款</view>
                <view class="status" wx:if="{{item.order_status==2}}">待发货</view>
                <view class="status" wx:if="{{item.order_status==3}}">待收货</view>
                <view class="status" wx:if="{{item.order_status==4}}">待评价</view>
                <view class="status red" wx:if="{{item.order_status==5}}">已完成</view>
                <view class="status" wx:if="{{item.order_status==6}}">拼团中</view>
                <view class="status" wx:if="{{item.order_status==7}}">已维权</view>
            </view>
            <view class="order-date">
                <view class="date-box">创建时间：{{item.create_time}}</view>
                <view class="status" wx:if="{{item.status==0}}">无效</view>
                <view class="status" wx:if="{{item.status==1}}">结算中</view>
                <view class="status red" wx:if="{{item.status==5}}">已结算</view>
            </view>
            <view class="order-date">
                <view class="date-box">生效时间：{{item.effect_time}}</view>
                <view>{{item.nickname}}</view>
            </view>
            <view class="goods-info">
                <view class="goods-des">
                    <view class="date-box">结算时间：{{item.settle_time}}</view>
                    <view wx:if="{{item.level==1}}">{{textFirstChild}}</view>
                    <view wx:if="{{item.level==2}}">{{textSecondChild}}</view>
                    <view wx:if="{{item.level==3}}">{{textThirdChild}}</view>
                </view>
            </view>
            <view>
                <scroll-view class="goods-img-container" scrollX="true">
                    <view class="img-box" wx:for="{{item.goods_list}}" wx:key="{{index}}">
                        <image class="goods-img" src="{{item.cover}}"></image>
                    </view>
                </scroll-view>
            </view>
            <view class="price-box">
                <view class="total-price">{{textCharge}}：{{item.charge}} {{textUnion}}</view>
            </view>
        </view>
    </view>
</view>
<view class="no-more-goods" hidden="{{loadingMoreHidden?true:false}}">没有更多啦</view>
