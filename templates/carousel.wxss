.swiper-container {
    width: 750rpx;
    position: relative;
    background-color: #f8f8f8;
}

.swiper-box {
    width: 100%;
    height: 460rpx;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 460rpx;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 8rpx;
    width: 16rpx;
    height: 16rpx;
    background: #fff;
    border-radius: 50%;
    transition: all .6s;
    opacity: .5;
}

.swiper-container .dots .dot.active {
    width: 16rpx;
    opacity: 1;
}